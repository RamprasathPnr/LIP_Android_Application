<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/white"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_supplied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "@string/txt_Supplied_by"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/text_view_supplied"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_supplied"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text_view_product_name"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_supplied"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" "
                    android:textStyle="bold"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/text_view_product_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_supplied"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/tumblr_red" />


                <LinearLayout
                    android:id="@+id/lay_quantity"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text_view_product_name"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_Quantity" />

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>